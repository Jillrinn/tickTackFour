{
  "name": "tick-tack-four",
  "version": "1.0.0",
  "description": "マルチプレイヤー・ゲームタイマー - ボードゲーム用の4〜6人対応タイマーアプリケーション",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm test --workspace=frontend -- --run",
    "test:backend": "(cd api && npm test)",
    "test:coverage": "npm run test:coverage --workspace=frontend && cd api && npm run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:phase1": "PHASE=1 playwright test",
    "test:e2e:phase2": "PHASE=2 playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "build": "npm run build --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "clean": "rm -rf frontend/dist"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tick-tack-four.git"
  },
  "keywords": [
    "game-timer",
    "multiplayer",
    "board-game",
    "react"
  ],
  "author": "",
  "license": "MIT"
}
