{
  "name": "ticktackfour-api",
  "version": "1.0.0",
  "description": "Azure Functions backend for TickTackFour multiplayer game timer",
  "scripts": {
    "build": "tsc && npm run copy-config",
    "copy-config": "cp host.json dist/host.json",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "func start"
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.0",
    "@azure/functions": "^4.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
